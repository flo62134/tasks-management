{% extends 'base.html.twig' %}
{% block body %}
    {% for project in projects %}
        <a href="{{ path('tasks-list', { 'id': project.id}) }}">
            <div style="background-color: {{ project.color }};">{{ project.name }}</div>
        </a>
    {% endfor %}

    <a href="{{ path('projects-create') }}">Create a new project</a>

{% endblock %}
